clear all; close all;
cityblock_path = '/Users/esthervasiete/Dropbox/ComputerVision/Homework4/cityblock/';
addpath(genpath(cityblock_path));

limages = dir(strcat(cityblock_path,'images/left*.png')); rimages = dir(strcat(cityblock_path,'images/right*.png'));
n = size(limages,1);

nFr = 100; %Number of frames per place
nPl = 10; %Number of training frames per place
nTr = 1; %Counter of training images

offset = round(nFr/2);
for ii = 1: 100: n
    for jj = 1:nPl
        (ii + offset)+(nFr/nPl)*jj
        train{nTr} = strcat(cityblock_path,'images/',limages(ii+(nFr/nPl)*jj).name);
        nTr = nTr + 1;
    end
end